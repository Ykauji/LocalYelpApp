<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Choose your categories"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:textSize="25sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/placesToEat"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView5"
            android:layout_marginStart="29dp"
            android:background="@color/colorPrimary"
            android:text="Places to eat"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/Events"
            android:layout_width="150dp"
            android:layout_height="305dp"
            android:layout_below="@+id/textView5"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/placesToEat"
            android:background="#ED5752"
            android:text="Events!"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/funStuff"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/placesToEat"
            android:layout_below="@+id/placesToEat"
            android:background="@color/colorPrimaryDark"
            android:layout_marginTop="5dp"
            android:text="Fun Stuff"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:text="Currently in ____!"
            android:textSize="15sp" />

        <Button
            android:id="@+id/transportation"
            android:layout_width="305dp"
            android:layout_height="80dp"
            android:layout_alignStart="@+id/funStuff"
            android:layout_below="@+id/funStuff"
            android:layout_marginTop="5dp"
            android:background="@color/colorAccent"
            android:text="Transportation"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/randomButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/transportation"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="RANDOM" />
    </RelativeLayout>

</LinearLayout>