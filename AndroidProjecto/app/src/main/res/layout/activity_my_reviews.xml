<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="matrix"
        app:srcCompat="@drawable/beautifulpotatoes" />

    <RatingBar
        android:id="@+id/ratingMyReviews"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="end"
        android:rating="4.5"
        android:layout_marginTop="-30dp" />

    <TextView
        android:id="@+id/nameMyReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="TextView"
        android:textSize="35sp"

        android:textStyle="bold"
        tools:text="Jim's Potato Parlor" />

    <TextView
        android:id="@+id/LocationInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:text="Address and Phone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:text="Your review:" />

    <TextView
        android:id="@+id/MyReviewMyReview"
        android:layout_width="match_parent"
        android:layout_height="244dp"
        android:text="I really enjoyed the food." />

    <Button
        android:id="@+id/editReviewMyReviews"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Edit Review" />
</LinearLayout>